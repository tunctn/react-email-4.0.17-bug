{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": ["./base.json", "@tsconfig/next/tsconfig.json"],
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@packages/*": ["../../packages/*"]
    }
  }
}
